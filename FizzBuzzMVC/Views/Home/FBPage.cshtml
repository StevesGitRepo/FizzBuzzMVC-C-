@model FizzBuzzMVC.Models.FizzBuzz

   <html>
    <body>
    <!-- ==== Main Section ==== -->
    <main class="flex-shrink-0 background">
      <div class="container mt-5">
        <div class="row">
          <div class="col-12 col-lg-4 border-end border-2 border-dark">
            <h1><span class="brandLogo">FIZZ BUZZ:</span> A Coding Project</h1>
            <h4 class="lead">
              When it counts you Fizz Buzz. A Javascript coding exercise using for-loops.
            </h4>
            <h4 class="lead">
              Write a program that prints the numbers 1 to 100. Multiples of '3'
              replaces the number with 'Fizz' and multiples of '5' display
              'Buzz'.
            </h4>
            <h2 class="mt-5 border-bottom border-2 border-dark">
              Instructions
            </h2>
            <p>
              Enter a Fizz and Buzz value. Press the "Buzz it!" button to view
              the values!
            </p>
          </div>

          <div class="col-12 col-lg-8">
            <>
              <h5>Enter Numbers</h5>
              <form asp-controller="Home" asp-action="FBPage" method="post" class="row gy-2 gx-3">
                <div class=" form-groucol">
                  <label asp-for="FizzValue">Fizz Value</label>
                  <input
                    type="number"
                    asp-for="FizzValue"
                    class="form-control"
                    value="Model.FizzValue"
                  />
                </div>
                <div class="col form-group">
                    <label asp-for="BuzzValue">BuzzValue</label>
                  <input
                    asp-for="BuzzValue"
                    type="number"
                    class="form-control"
                    value="Model.BuzzValue"
                  />
                </div>
                <div class="col-12 d-flex justify-content-end">
                  <!-- Button -->
                  <button
                    type="submit"
                    class="btn btn-dark btn-lg"
                  >
                    <strong>Submit</strong>
                  </button>
                </div>
              </form>
              <h2 class="mt-5 border-bottom border-2">Results</h2>
              <div class="table-responsive">
                  if (@Model.Result.Count > 0)

                    <table class="table-striped table-hover table table-dark">
                        <thead>
                            <tr><th colspan="5">Fizz Buzz Results</th></tr>
                        </thead>
                            @for (int i = 0; i < Model.Result.Count(); i += 5)
                            {
                                <tr><td>@Model.Result[i]</td>
                                <td>@Model.Result[i + 1]</td>
                                <td>@Model.Result[i + 2]</td>
                                <td>@Model.Result[i + 3]</td>
                                <td>@Model.Result[i + 4]</td></tr>
                            }
                    </table>
              </div>
          </div>
        </div>
      </div>
    </main>

    <!-- ==== Footer Section ==== -->
    <footer class="footer mt-auto py-3">
      <div class="container-fluid">
        <div class="row row-cols-1 row-cols-lg-3">
          <div
            class="col-12 col-lg-4 text-light order-last order-lg-first pt-2"
          >
            <div class="footerContact">
              <span class="text-muted">&copy;2023</span> Steve Szymanski ||
              steve.k.szymanski@gmail.com
            </div>
          </div>
          <div
            class="col-6 col-lg-4 d-flex align-items-center justify-content-start justify-content-lg-center"
          >
            <img
              src="img/SteveBannerDarkNameOnly.png"
              alt="Steve Szymanski Logo"
              height="24"
            />
          </div>
          <div
            class="col-6 col-lg-4 d-flex align-items-md-center justify-content-end justify-content-lg-end"
          >
            <div class="row">
              <div class="col social">
                <a
                  href="https://www.linkedin.com/in/steve-szymanski-245849238/"
                  target="_blank"
                  ><i class="fab fa-linkedin fa-2x"></i
                ></a>
              </div>
              <div class="col social">
                <a href="https://twitter.com/SteveKSzymanski" target="_blank"
                  ><i class="fab fa-twitter fa-2x"></i
                ></a>
              </div>
              <div class="col social">
                <a href="https://github.com/StevesGitRepo" target="_blank"
                  ><i class="fab fa-github fa-2x"></i
                ></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <template id="fbTemplate">
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </template>
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
      crossorigin="anonymous"
    ></script>
    <script src="/js/site.js"></script>
    <script>
      document.getElementById('btnSubmit').addEventListener('click', getValues);
    </script>
  </body>
</html>